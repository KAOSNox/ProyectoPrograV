@model ProyectoProgra5.Models.Partido

@{
    ViewData["Title"] = "Editar Partido";
}

<div class="card">
    <div class="card-header">
        <h1 class="text-center">Formulario para editar un partido</h1>
    </div>
    <hr />
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <!--Input Nombre-->
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" value="@Model.Nombre">
            </div>
            <!--Input Usuario-->
            <div class="mb-3">
                <label asp-for="Fundacion" class="form-label">Fecha Fundacion</label>
                <input asp-for="Fundacion" class="form-control" value="@Model.Fundacion">
            </div>
            <!--Input Contraseña-->
            <div class="mb-3">
                <label asp-for="Lider" class="form-label">Nombre del Lider</label>
                <input asp-for="Lider" class="form-control" value="@Model.Lider">
            </div>
            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-warning">Editar</button>
                <a href="/Partidos/" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
        
    </div>
</div>