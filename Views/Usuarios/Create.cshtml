@model ProyectoProgra5.Models.Usuarios.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="card">
    <div class="card-header">
        <h1 class="text-center">Formulario para ingresar un nuevo usuario</h1>
    </div>
    <hr />
    <div class="card-body">
        <form asp-action="Create" method="post">
            <!--Input Nombre-->
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control">
            </div>
            <!--Input Usuario-->
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Usuario</label>
                <input asp-for="Username" class="form-control">
            </div>
            <!--Input Contraseña-->
            <div class="mb-3">
                <label asp-for="Contraseña" class="form-label">Contraseña</label>
                <input asp-for="Contraseña" class="form-control">
            </div>
            <!--Select Rol-->
            <div class="mb-3">
                <label asp-for="rolID" class="form-label">Rol</label>
                <select asp-for="rolID" class="form-select">
                    <option value="1">Administrador</option>
                    <option value="2">Usuario</option>
                </select>
            </div>
            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-success">Agregar</button>
                <a href="/Usuarios/" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
        
    </div>
</div>