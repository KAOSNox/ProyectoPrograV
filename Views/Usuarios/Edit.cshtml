@model ProyectoProgra5.Models.Usuarios.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="card">
    <div class="card-header">
        <h1 class="text-center">Formulario para ingresar un nuevo usuario</h1>
    </div>
    <hr />
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.UserID" method="post">
            <!--Input Nombre-->
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" value="@Model.Nombre">
            </div>
            <!--Input Usuario-->
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Usuario</label>
                <input asp-for="Username" class="form-control" value="@Model.Username">
            </div>
            <!--Input Contraseña-->
            <div class="mb-3">
                <label asp-for="Contraseña" class="form-label">Contraseña</label>
                <input asp-for="Contraseña" class="form-control" value="@Model.Contraseña">
            </div>
            <!--Select Rol-->
            <div class="mb-3">
                <label asp-for="rolID" class="form-label">Rol</label>
                <select asp-for="rolID" class="form-select">
                    @if(Model.rolID == 1)
                    {
                        <option value="1" selected>Administrador</option>
                        <option value="2">Usuario</option>
                    }else{
                        <option value="1">Administrador</option>
                        <option value="2" selected>Usuario</option>
                    }
                    
                    
                </select>
            </div>
            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-warning">Editar</button>
                <a href="/Usuarios/" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
        
    </div>
</div>